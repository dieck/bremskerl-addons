<?xml version="1.0" encoding="UTF-8"?>
<openerp>
	<data>

		<record id="text_search" model="ir.ui.view">
			<field name="name">boilerplates.modularity.text.search</field>
			<field name="model">boilerplates.text</field>
			<field name="type">search</field>
			<field name="inherit_id" ref="boilerplates.text_search" />
			<field name="arch" type="xml">
				<xpath expr="//group[@string='Constraints...']" position="after">
					<newline />
					<group expand='0' string="Usability..." groups="base.group_extended">
						<!-- <filter name="filter_usability_xyz" string='XYZ' icon="terp-go-week" 
							domain="[('usability_xyz','=',True)]" /> -->
					</group>
				</xpath>
			</field>
		</record>

		<record id="text_form" model="ir.ui.view">
			<field name="name">boilerplates.modularity.text.form</field>
			<field name="model">boilerplates.text</field>
			<field name="inherit_id" ref="boilerplates.text_form" />
			<field name="type">form</field>
			<field name="arch" type="xml">
				<notebook position="inside">
					<page string="Usability">
					</page>
				</notebook>
			</field>
		</record>

	</data>
</openerp>
