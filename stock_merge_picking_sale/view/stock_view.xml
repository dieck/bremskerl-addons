<?xml version="1.0" encoding="UTF-8"?>
<openerp>
	<data>

		<!-- views -->
		<record id="view_picking_form" model="ir.ui.view">
			<field name="name">stock.picking.stmrpcsl.form</field>
			<field name="model">stock.picking</field>
			<field name="type">form</field>
			<field name="inherit_id" ref="stock.view_picking_form" />
			<field name="arch" type="xml">
				<xpath
					expr="//form/notebook/page[@string='Products']/field[@name='move_lines']/tree/field[@name='location_id']"
					position="before">
					<field name="premerge_sale_id" string="Sales Order" />
				</xpath>

			</field>
		</record>

		<record id="view_picking_out_form" model="ir.ui.view">
			<field name="name">stock.picking.stmrpcsl.out.form</field>
			<field name="model">stock.picking</field>
			<field name="type">form</field>
			<field name="inherit_id" ref="stock.view_picking_out_form" />
			<field name="arch" type="xml">
				<xpath
					expr="//form/notebook/page[@string='Products']/field[@name='move_lines']/tree/field[@name='location_id']"
					position="before">
					<field name="premerge_sale_id" string="Sales Order" />
				</xpath>

			</field>
		</record>

		<record id="view_picking_in_form" model="ir.ui.view">
			<field name="name">stock.picking.stmrpcsl.in.form</field>
			<field name="model">stock.picking</field>
			<field name="type">form</field>
			<field name="inherit_id" ref="stock.view_picking_in_form" />
			<field name="arch" type="xml">
				<xpath
					expr="//form/notebook/page[@string='General Information']/field[@name='move_lines']/tree/field[@name='location_dest_id']"
					position="before">
					<field name="premerge_sale_id" string="Sales Order" />
				</xpath>

			</field>
		</record>

		<record id="view_move_form" model="ir.ui.view">
			<field name="name">stock.picking.stmrpcsl.stock.move.form.info</field>
			<field name="model">stock.move</field>
			<field name="type">form</field>
			<field name="inherit_id" ref="stock.view_move_form" />
			<field name="arch" type="xml">
				<xpath expr="//group/separator[@string='Traceability']/.."
					position="after">
					<group colspan="2" col="4">
						<separator string="Sale Order References" colspan="4" />
						<field name="sale_lookup_type" />
						<field name="sale_lookup_order_id" />
						<field name="sale_state" />
						<field name="sale_client_order_ref" />
					</group>
				</xpath>
			</field>
		</record>

		<record id="view_move_tree_reception_picking" model="ir.ui.view">
			<field name="name">stock.picking.stmrpcsl.stock.move.tree2</field>
			<field name="model">stock.move</field>
			<field name="type">tree</field>
			<field name="inherit_id" ref="stock.view_move_tree_reception_picking" />
			<field name="arch" type="xml">
				<field name="origin" position="replace">
					<field name="sale_lookup_order_id" />
					<field name="sale_client_order_ref" />
				</field>
			</field>
		</record>

	</data>
</openerp>
