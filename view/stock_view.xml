<?xml version="1.0" encoding="UTF-8"?>
<openerp>
	<data>

		<!-- views -->
		<record id="view_move_form" model="ir.ui.view">
			<field name="name">stock.move.notes.form</field>
			<field name="model">stock.move</field>
			<field name="type">form</field>
			<field name="inherit_id" ref="stock.view_move_form" />
			<field name="arch" type="xml">
				<xpath expr="//group/separator[@string='Traceability']/.."
					position="after">
					<group colspan="2" col="4">
						<separator string="Notes" colspan="4" />
						<field name="notes" />
						<field name="prtnotes" />
					</group>
				</xpath>
			</field>
		</record>


		<record id="view_move_form_reception_picking" model="ir.ui.view">
			<field name="name">stock.move.notes.form.reception</field>
			<field name="model">stock.move</field>
			<field name="type">form</field>
			<field name="inherit_id" ref="stock.view_move_form_reception_picking" />
			<field name="arch" type="xml">
				<xpath expr="//group/separator[@string='Traceability']/.."
					position="after">
					<group colspan="2" col="4">
						<separator string="Notes" colspan="4" />
						<field name="notes" />
						<field name="prtnotes" />
					</group>
				</xpath>
			</field>
		</record>

		<record id="view_picking_form" model="ir.ui.view">
			<field name="name">stock.move.notes.picking.internal.form</field>
			<field name="model">stock.picking</field>
			<field name="type">form</field>
			<field name="inherit_id" ref="stock.view_picking_form" />
			<field name="arch" type="xml">
				<xpath
					expr="//field[@name='move_lines']/form/group/separator[@string='Traceability']/.."
					position="after">
					<group colspan="2" col="2">
						<separator string="Notes" colspan="2" />
						<field name="notes" />
						<field name="prtnotes" />
					</group>
				</xpath>
			</field>
		</record>

		<record id="view_picking_out_form" model="ir.ui.view">
			<field name="name">stock.move.notes.picking.out.form</field>
			<field name="model">stock.picking</field>
			<field name="type">form</field>
			<field name="inherit_id" ref="stock.view_picking_out_form" />
			<field name="arch" type="xml">
				<xpath
					expr="//field[@name='move_lines']/form/group/separator[@string='Traceability']/.."
					position="after">
					<group colspan="2" col="2">
						<separator string="Notes" colspan="2" />
						<field name="notes" />
						<field name="prtnotes" />
					</group>
				</xpath>
			</field>
		</record>

		<record id="view_picking_in_form" model="ir.ui.view">
			<field name="name">stock.move.notes.picking.in.form</field>
			<field name="model">stock.picking</field>
			<field name="type">form</field>
			<field name="inherit_id" ref="stock.view_picking_in_form" />
			<field name="arch" type="xml">
				<xpath
					expr="//field[@name='move_lines']/form/group/separator[@string='Traceability']/.."
					position="after">
					<group colspan="2" col="2">
						<separator string="Notes" colspan="2" />
						<field name="notes" />
						<field name="prtnotes" />
					</group>
				</xpath>
			</field>
		</record>



		<record id="view_delivery_order_inherit_stock" model="ir.ui.view">
			<field name="name">stock.move.notes.picking.out.form</field>
			<field name="type">form</field>
			<field name="model">stock.picking</field>
			<field name="inherit_id" ref="delivery.view_delivery_order_inherit_stock" />
			<field name="arch" type="xml">
				<xpath
					expr="//button[@string='Delivery Order'][@type='action'][@states='done,assigned'][@icon='gtk-print']"
					position="replace">
					<button name="%(report_shipping)d" string="Delivery Order"
						states="done,assigned" type="action" icon="gtk-print" />

				</xpath>
			</field>
		</record>


	</data>
</openerp>
