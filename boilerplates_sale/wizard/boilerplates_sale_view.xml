<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>

		<record id="boilerplates_sale_wiz" model="ir.ui.view">
			<field name="name">Boilerplates</field>
			<field name="model">boilerplate.wizard.sale</field>
			<field name="type">form</field>
			<field name="arch" type="xml">
				<form string="Add Boilerplate">
					<field name="boilerplate_id" colspan="4" required="1"/>
					<field name="remote_id" invisible="1" />
					<group col="2" colspan="4">
						<button icon="gtk-cancel" special="cancel" string="Cancel" />
						<button name="do_boilerplate" string="Add Boilerplate" type="object"
							icon="gtk-go-forward" />
					</group>
				</form>
			</field>
		</record>

		<act_window
			id="action_boilerplate_sale"
			name="Add Boilerplate"
			res_model="boilerplate.wizard.sale"
			src_model="sale.order"
			view_type="form"
			view_mode="form"
			target="new"
			view_id="boilerplates_sale_wiz" 
			domain="[('remote_id', '=', active_id)]"
		/>

	</data>
</openerp>
